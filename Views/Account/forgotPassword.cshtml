@using IdentityManager.ViewModels
@model ForgotPasswordViewModel;

<div class="row col-md-10 offset-md-1">
	<h1 class="text-primary text-center pt-2">Forgot your password</h1>

	<form method="post" asp-controller="Account" asp-action="forgotPassword">

		<div class="border p-2 rounded">
			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Email" class="col-12">Enter you Email</label>
				<div class="col-md-12">
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>

			<br />
			<div class="form-group pt-2 mb-3">
				<div class="col-md-6 offset-md-3">
					<button class="btn-success form-control" type="submit">Submit</button>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}