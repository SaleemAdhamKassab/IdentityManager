@using IdentityManager.ViewModels
@model LoginViewModel;

<div class="row col-md-10 offset-md-1">
	<h1 class="text-primary text-center pt-2">Login</h1>

	<form method="post" asp-controller="Account" asp-action="login">

		<div class="border p-2 rounded">
			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Email" class="col-12">Email</label>
				<div class="col-md-12">
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>

			<br />
			<div class="form-group">
				<label asp-for="Password" class="col-12">Password</label>
				<div class="col-md-12">
					<input type="password" asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
			</div>

			<br />
			<div class="form-group pt-2">
				<div class="col-md-12">
					<div class="custom-checkbox">
						<label>
							<input asp-for="RememberMe" /> Remember Me
						</label>
					</div>
				</div>
			</div>

			<br />
			<div class="form-group pt-2 mb-3">
				<div class="col-md-6 offset-md-3">
					<button class="btn-success form-control" type="submit">Login</button>
				</div>
				<div class="row">
					<div>
						<a asp-action="register"> Register as a new user</a>
					</div>
					<br />
					<div>
						<a asp-action="forgotPassword"> Forgot your Password?</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}